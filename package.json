{
  "name": "txma-audit",
  "version": "1.0.0",
  "type": "module",
  "description": "TxMA Audit",
  "repository": {
    "type": "git",
    "repository": "https://github.com/govuk-one-login/txma-audit"
  },
  "author": "GDS",
  "license": "MIT",
  "engines": {
    "node": "^24.0.0"
  },
  "scripts": {
    "build": "tsc --noEmit && tsx ./esbuild.config.ts",
    "deploy:dev": "npm run build && sam deploy --resolve-s3",
    "lint": "prettier . --check || exit 1 ; eslint . --max-warnings=0",
    "lint:fix": "prettier . --write ; eslint . --fix",
    "postinstall": "husky",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run -c ./tests/integrationTests/vitest.config.integration.ts",
    "test:e2e": "vitest run -c ./tests/e2eTests/vitest.config.e2e.ts",
    "tsFile": "tsx"
  },
  "dependencies": {
    "@aws-crypto/client-node": "4.2.1",
    "@aws-crypto/encrypt-node": "4.2.1",
    "@aws-crypto/material-management": "4.2.1",
    "@aws-lambda-powertools/logger": "2.30.2",
    "@aws-sdk/client-firehose": "3.986.0",
    "@aws-sdk/client-s3": "3.986.0",
    "@aws-sdk/client-s3-control": "3.986.0",
    "aws-xray-sdk-core": "3.12.0"
  },
  "resolutions": {
    "micromatch": "4.0.8"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "3.982.0",
    "@aws-sdk/client-cloudwatch-logs": "3.982.0",
    "@aws-sdk/client-lambda": "3.982.0",
    "@aws-sdk/client-secrets-manager": "3.982.0",
    "@aws-sdk/client-ssm": "3.982.0",
    "@aws-sdk/client-sso-oidc": "^3.982.0",
    "@aws-sdk/client-sts": "3.982.0",
    "@aws-sdk/util-endpoints": "3.922.0",
    "@eslint/js": "^9.39.1",
    "@types/aws-lambda": "8.10.157",
    "@types/node": "24.10.0",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "aws-sdk-client-mock": "4.1.0",
    "commander": "14.0.2",
    "esbuild": "0.27.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.18",
    "yaml-cfn": "0.3.2"
  },
  "lint-staged": {
    "*": "prettier --write .",
    "*.{js,ts}": "eslint --fix ."
  }
}
